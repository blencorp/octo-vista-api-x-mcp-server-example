# Set default line endings to LF
* text=auto eol=lf

# Python files
*.py linguist-language=Python text eol=lf

# Configuration files
*.toml linguist-language=TOML text eol=lf
*.json linguist-language=JSON text eol=lf
*.yml linguist-language=YAML text eol=lf
*.yaml linguist-language=YAML text eol=lf

# Documentation
*.md linguist-documentation=true text eol=lf

# Exclude certain files from language detection
mock_server/* linguist-vendored=true
scripts/auto_setup.py linguist-generated=true

# Mark GitHub workflows as detectable
.github/workflows/*.yml linguist-detectable=true
.github/workflows/*.yaml linguist-detectable=true