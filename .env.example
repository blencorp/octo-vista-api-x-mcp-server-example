# Vista API Configuration
# If these are not set, the server will fall back to using the mock server
# Auth service URL (for JWT token generation)
# If not set, will use VISTA_API_BASE_URL
VISTA_AUTH_URL=http://localhost:8888

# API service URL (for RPC invocations)
# Required for production use
VISTA_API_BASE_URL=http://localhost:8888

# API key for authentication
VISTA_API_KEY=test-wildcard-key-456

# Default station and user
DEFAULT_STATION=500
DEFAULT_DUZ=10000000219

# Debug mode (true/false)
VISTA_MCP_DEBUG=false

# Cache Configuration (optional - defaults to in-memory cache)
# Backend options: memory, redis, elasticache, dax, multi-tier, local-dev, local-dev-redis
CACHE_BACKEND=memory

# AWS Cache Backend (for AWS deployments)
AWS_CACHE_BACKEND=elasticache

# Local Redis Configuration (for local-dev-redis backend)
LOCAL_CACHE_BACKEND_TYPE=elasticache
LOCAL_REDIS_URL=redis://localhost:6379
LOCAL_REDIS_PASSWORD=local_dev_password
LOCAL_REDIS_FALLBACK=true

# Cache TTL Settings (in minutes)
PATIENT_CACHE_TTL_MINUTES=20
TOKEN_CACHE_TTL_MINUTES=55
RESPONSE_CACHE_TTL_MINUTES=10

# Cache Key Prefix
CACHE_KEY_PREFIX=mcp:

# Local Cache Settings (for in-memory cache)
LOCAL_CACHE_MAX_SIZE=1000
LOCAL_CACHE_PERSISTENCE=false
LOCAL_CACHE_PERSISTENCE_FILE=local_cache.json