# Vista API Configuration
VISTA_API_BASE_URL=https://your-vista-api.example.com
VISTA_AUTH_URL=https://your-vista-auth.example.com
VISTA_API_KEY=your-api-key-here

# Default Vista Configuration
DEFAULT_STATION=500
DEFAULT_DUZ=10000000219

# Debug Mode
VISTA_MCP_DEBUG=false

# Cache Backend Configuration
# Options: elasticache, dax, redis, multi-tier, local-dev, local-dev-redis, memory
CACHE_BACKEND=local-dev-redis
AWS_CACHE_BACKEND=elasticache

# ElastiCache for Redis Configuration
ELASTICACHE_ENDPOINT=your-cluster.xxxxx.cache.amazonaws.com
ELASTICACHE_PORT=6379
ELASTICACHE_AUTH_TOKEN=your-auth-token-here

# DynamoDB Accelerator (DAX) Configuration
DAX_ENDPOINT=your-dax-cluster.xxxxx.dax-clusters.amazonaws.com
DAX_TABLE_NAME=vista_cache

# Redis Configuration (fallback)
REDIS_URL=redis://localhost:6379/0

# AWS General Configuration
AWS_REGION=us-east-1
CACHE_KEY_PREFIX=mcp:

# Cache TTL Configuration (Updated)
PATIENT_CACHE_TTL_MINUTES=20  # Increased from 10 minutes
TOKEN_CACHE_TTL_MINUTES=55    # Keep current
RESPONSE_CACHE_TTL_MINUTES=10 # Increased from 5 minutes

# Multi-tier Cache Configuration
MULTI_TIER_WRITE_THROUGH=true
MULTI_TIER_READ_THROUGH=true

# Local Development Configuration (Basic)
LOCAL_CACHE_BACKEND_TYPE=elasticache  # Simulate: elasticache, dax
LOCAL_CACHE_MAX_SIZE=1000
LOCAL_CACHE_PERSISTENCE=false
LOCAL_CACHE_PERSISTENCE_FILE=local_cache.json

# Enhanced Local Development with Redis
LOCAL_REDIS_URL=redis://localhost:6379
LOCAL_REDIS_PASSWORD=local_dev_password
LOCAL_REDIS_FALLBACK=true

# Local Cache Monitoring (optional)
LOCAL_CACHE_MONITORING=false  # Enable Redis Commander and Insight

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/octo-vista.log
ENABLE_CONSOLE_LOGGING=false
